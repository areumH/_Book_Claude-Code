{
  "name": "webpack-bundle-optimization",
  "version": "1.0.0",
  "description": "Webpack bundle size optimization example",
  "main": "src/index.js",
  "type": "module",
  "sideEffects": [
    "*.css",
    "*.scss", 
    "./src/polyfills.js",
    "./src/global-styles.js"
  ],
  "scripts": {
    "start": "webpack serve --mode=development",
    "build": "webpack --mode=production",
    "build:analyze": "webpack --mode=production --env analyze",
    "build:stats": "webpack --mode=production --json > stats.json",
    "bundle-analyzer": "npx webpack-bundle-analyzer dist/stats.json",
    "size-limit": "size-limit",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "date-fns": "^2.29.3",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.7.0",
    "css-minimizer-webpack-plugin": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "size-limit": "^8.2.0",
    "@size-limit/preset-big-lib": "^8.2.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.0",
    "rimraf": "^4.1.0"
  },
  "size-limit": [
    {
      "name": "Main bundle",
      "path": "dist/main.*.js",
      "limit": "250 KB"
    },
    {
      "name": "Vendor bundle", 
      "path": "dist/vendors.*.js",
      "limit": "500 KB"
    },
    {
      "name": "CSS files",
      "path": "dist/*.css",
      "limit": "50 KB"
    },
    {
      "name": "Total bundle size",
      "path": "dist/**/*.{js,css}",
      "limit": "800 KB"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}