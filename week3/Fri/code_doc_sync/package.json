{
  "name": "api-documentation-example",
  "version": "1.0.0",
  "description": "TypeScript API 코드 문서화 예제 프로젝트",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs -p 8080",
    "docs:build-and-serve": "npm run docs && npm run docs:serve",
    "clean": "rm -rf dist docs",
    "clean:docs": "rm -rf docs",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "typescript",
    "api",
    "documentation",
    "typedoc",
    "jsdoc",
    "example"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/api-docs-example"
  },
  "bugs": {
    "url": "https://github.com/example/api-docs-example/issues"
  },
  "homepage": "https://github.com/example/api-docs-example#readme"
}