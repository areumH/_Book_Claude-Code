{
  "name": "cookshare-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r --filter='!@cookshare/web' build && pnpm --filter=@cookshare/web build",
    "dev": "pnpm --filter=@cookshare/web dev",
    "start": "pnpm --filter=@cookshare/web start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:ui": "pnpm --filter=@cookshare/ui test",
    "test:web": "pnpm --filter=@cookshare/web test",
    "test:e2e": "pnpm --filter=@cookshare/web test:e2e",
    "test:e2e:ui": "pnpm --filter=@cookshare/web test:e2e:ui",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky",
    "docker:dev": "./scripts/dev.sh start",
    "docker:stop": "./scripts/dev.sh stop",
    "docker:restart": "./scripts/dev.sh restart",
    "docker:logs": "./scripts/dev.sh logs",
    "docker:seed": "./scripts/dev.sh seed",
    "docker:reset": "./scripts/dev.sh reset-db",
    "docker:clean": "./scripts/dev.sh clean"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.6.5",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
