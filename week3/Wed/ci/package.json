{
  "name": "ci-example",
  "version": "1.0.0",
  "description": "GitHub Actions CI example with Node.js",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Build completed'",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix"
  },
  "keywords": ["nodejs", "ci", "testing", "github-actions"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}